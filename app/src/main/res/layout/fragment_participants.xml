<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="jakubkarlo.com.goldwise.Fragments.ParticipantsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/participantsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/participants_title"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp" />

        <SearchView
            android:id="@+id/searchPersonView"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/participantsTitle"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp">

        </SearchView>

        <ListView
            android:id="@+id/participantsListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/searchPersonView"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:divider="#00000000"
            android:dividerHeight="10dp"
           />

    </RelativeLayout>

</FrameLayout>
